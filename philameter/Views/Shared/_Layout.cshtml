<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Assets/css/Site.css" rel="stylesheet" />
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Assets/js/modernizr-2.6.2.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="~/Assets/css/endless.min.css" rel="stylesheet" />
    <link href="~/Assets/css/endless-skin.css" rel="stylesheet" />
</head>
<body class="overflow-hidden">
    <div id="overlay" class="transparent"></div>

    <div id="wrapper" class="preload">
        @Html.MvcSiteMap().Menu("MenuNavBarHelper")

        @RenderBody();

        <!-- Footer
        ================================================== -->
        <footer>
            <div class="row">
                <div class="col-sm-6">
                    <span class="footer-brand">
                        <strong class="text-danger">Philameter</strong>
                    </span>
                    <p class="no-margin">
                        <i class="fa fa-child"></i> 2015 <strong>Philameter</strong>. Alrights Preserved.
                    </p>
                </div><!-- /.col -->
            </div><!-- /.row-->
        </footer>


        <!--Modal-->
        <div class="modal fade" id="newFolder">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4>Create new folder</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="folderName">Folder Name</label>
                                <input type="text" class="form-control input-sm" id="folderName" placeholder="Folder name here...">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-sm btn-success" data-dismiss="modal" aria-hidden="true">Close</button>
                        <a href="#" class="btn btn-danger btn-sm">Save changes</a>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </div><!-- /wrapper -->


    <script src="~/Assets/js/jquery-1.10.2.min.js"></script>
    <script src="~/Assets/js/bootstrap.min.js"></script>
    <script src="~/Assets/js/endless/pace.js"></script>
    <script src="~/Assets/js/jquery.colorbox.min.js"></script>
    <script src="~/Assets/js/jquery.cookie.min.js"></script>
    <script src="~/Assets/js/jquery.popupoverlay.min.js"></script>
    <script src="~/Assets/js/jquery.slimscroll.min.js"></script>
    <script src="~/Assets/js/jquery.sparkline.min.js"></script>
    <script src="~/Assets/js/endless/endless.js"></script>
    <script src="~/Assets/js/endless/philadmin.js"></script>

    @RenderSection("Scripts", false);

</body>
</html>